#ifndef MENU_H_
#define MENU_H_
typedef struct {
	const char* title;
	const int action;
	menu_t *submenu;
} menuItem_t;


typedef struct {
	int numItems;
	menuItem_t *items;
	int currentItem;
} menu_t;

extern menu_t *currentMenu;

void MenuDraw(menu_t * menu);
void MenuHandleEncoder(menu_t *menu, int value, int press, int* appState);


#endif /* MENU_H_ */
