#include <stm32l0xx.h>
#include "rcc.h"
#include "spi.h"
#include "gpio.h"
#include "lcd.h"
#include "systick.h"
#include "rtc.h"
#include "sht10.h"

void setup(int firsttime)
{
	SetClock16MhzInternal();
	ENABLE_GPIO_PORT(A);
	ENABLE_GPIO_PORT(B);
	//ENABLE_GPIO_PORT(C);
	SetupSysTick(1); // note that the PWM for the peltier is driven by systick, so keep it at 1ms

	EnableLseOscillator(); // to drive RTC
	RtcInit();

	// LIGHT
	GPIO_AS_OUTPUT(A,1);

	setup_sht10();
	read_temp_rh_sensor();


}
